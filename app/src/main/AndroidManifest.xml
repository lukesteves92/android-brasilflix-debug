<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.grupo7.brasilflixapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>
        <package android:name="com.google.android.apps.maps" />

        <intent>
            <action android:name="android.intent.action.VIEW" />
        </intent>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />

            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.PICK" />

            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.CHOOSER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/brflixlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrasilFlixapp">
        <activity
            android:name="com.grupo7.brasilflixapp.ui.activity.changeEmail.ChangeEmailActivity"
            android:exported="true" />
        <activity
            android:name="com.grupo7.brasilflixapp.ui.activity.account.AccountActivity"
            android:exported="true" />
        <activity
            android:name="com.grupo7.brasilflixapp.ui.activity.search.SearchActivity"
            android:exported="true" />
        <activity
            android:name="com.grupo7.brasilflixapp.ui.activity.profile.ProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.grupo7.brasilflixapp.ui.activity.myPreference.MyPreferenceActivity"
            android:exported="true" />
        <activity
            android:name="com.grupo7.brasilflixapp.ui.activity.preferences.PreferencesActivity"
            android:exported="true" />
        <activity android:name="com.grupo7.brasilflixapp.ui.activity.home.HomeActivity" />
        <activity android:name="com.grupo7.brasilflixapp.ui.activity.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.grupo7.brasilflixapp.ui.activity.main.MainActivity" />
    </application>

</manifest>