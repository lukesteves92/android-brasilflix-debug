<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_nav"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.grupo7.brasilflixapp.ui.fragments.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailSearchFragment"
            app:destination="@id/detailSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailSearchFragment"
        android:name="com.grupo7.brasilflixapp.ui.fragments.detail.moviedetail.view.DetailSearchFragment"
        android:label="fragment_detail_search"
        tools:layout="@layout/fragment_detail_search" />
</navigation>